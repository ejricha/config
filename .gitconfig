# ~/.gitconfig
# 
# Configuration file for git

[color]
	ui = true
[color "branch"]
	current = green reverse
	local = green
[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold
[color "status"]
	added = yellow bold
	changed = green bold
	untracked = cyan bold
[color "decorate"]
	HEAD = blue bold
	branch = green bold
	remoteBranch = magenta bold
	master = red bold
#	tag = blue bold
#	stash = blue
[core]
	whitespace=fix,-indent-with-non-tab,trailing-space,cr-at-eol
	excludesfile = ~/.gitignore-rab
	editor = nvim
	pager = cat
[stash]
	pager = less
[apply]
	whitespace = nowarn
[rerere]
	enabled = 1
[log]
	date = format:%Y-%m-%d %H:%M
[format]
	pretty = tformat:%C(yellow)%h  %C(cyan)%ad  %C(green)%<(15,trunc)%an  %C(reset)%s%C(auto)%d
[alias]
	################
	a = add
	amend = !git add -A && git commit --amend --no-edit # Add to the previous commit
	################
	br = branch
	################
	ci = commit
	commi = commit
	commt = commit
	commti = commit
	m = !git commit -m
	################
	co = checkout
	################
	current = "!git rev-parse --abbrev-ref --symbolic-full-name @{u}"
	################
	d = diff --color-words='[^[:space:]]'
	df = diff --color-words='[^[:space:]]'
	diffunpushed = diff @{u}..
	################
	g = log --graph -20
	gr = log --graph
	graph = log --graph --oneline --decorate=short --branches='*'
	lol = log --graph --color=always
	################
	l = log
	lg = log --name-status --color=always
	logfollow = log --follow
	################
	lgg = "!git logunpushed ${@} && git logpushed -5 ${@}"
	logformat = "!git log --graph --pretty=\"tformat:%C(yellow)%h  %C(cyan)%ad  %C(green)%<(15,trunc)%an  ${TEXT}%s%C(reset)%C(auto)%d\""
	logpushed = "!C=$(git current) && TEXT=\"%C(white bold)\" git logformat ${C}"
	logunpushed = "!C=$(git current) && TEXT=\"%C(cyan bold)\" git logformat ${C}..HEAD"
	################
	patch = am --reject --ignore-whitespace -i # Apply patch, ignoring whitespace
	################
	pend = cherry -v origin/master # Show pending changes to master branch
	################
	praise = blame
	p = blame
	################
	r = remote -v
	################
	reorder = "!GIT_SEQUENCE_EDITOR=\"sed -i -n 'h;1n;2p;g;p'\" git rebase -i HEAD~2" # Reorder the last two commits
	################
	s = status
	stats = status
	statsu = status
	statu = status
	st = status -sb
	################
	sh = show --color=always
	################
	up = pull
	upr = pull --rebase
	pr = pull --rebase
	################
	who = "!f() { W=$1; shift; git log --author=$W $@; }; f"
	w = !git who
	################
[push]
	default = simple
[http]
	sslVerify = true
[user]
	email = ejricha+github@gmail.com
	name = Eric Richardson
[credential]
	helper = cache --timeout=3600
[include]
	path = ~/.gitconfig.custom
